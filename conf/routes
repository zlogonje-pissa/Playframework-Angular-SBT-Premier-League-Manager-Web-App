# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Serve index page from public directory
GET     /                               controllers.FrontendController.index()

GET     /api/footballclubs              controllers.FootballClubController.listClubs()
POST    /api/randmatch                  controllers.FootballClubController.randomMatch()
POST    /api/savedata                   controllers.FootballClubController.saveData()
GET     /api/listMatches                controllers.FootballClubController.listMatches()



